<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#74CFD0"
    tools:context=".screens.signup.registro_elegir_icono">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/middle_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".25" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/last_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".8" />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sized_guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".1"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAvatars"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="@id/last_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/sized_guideline"
            app:layout_constraintTop_toTopOf="@+id/middle_guideline"
            app:spanCount="2" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Â¡Elige tu icono!"
            android:textColor="?attr/colorSecondary"
            android:fontFamily="@font/lato_black"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/middle_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bottom_guideline" />



        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_button_guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".25"
            />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_button_guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".75"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".07" />


        <Button
            android:id="@+id/button_next_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#74CFD0"
            android:fontFamily="@font/lato_black"
            android:stateListAnimator="@null"
            android:text="Siguiente"
            android:textSize="18sp"
            android:textColor="?attr/colorSecondary"
            app:icon="@drawable/right_arrow"
            app:iconGravity="end"
            app:iconSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.90"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/last_guideline"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/button_back_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#74CFD0"
            android:fontFamily="@font/lato_black"
            android:stateListAnimator="@null"
            android:text="Regresar"
            android:textSize="18sp"
            android:textColor="?attr/colorSecondary"
            app:icon="@drawable/left_arrow"
            app:iconSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/last_guideline"
            app:layout_constraintVertical_bias="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>