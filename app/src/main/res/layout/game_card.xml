<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="#6D8586"
    app:cardCornerRadius="25dp"
    app:cardElevation="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Home"
        android:orientation="vertical">

        <!-- Media -->

        <ImageView
            android:id="@+id/game_card_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/profilePic"
            android:scaleType="fitStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.16"
            app:srcCompat="@drawable/memory"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/game_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/game1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_card_image"
            app:layout_constraintVertical_bias="0.142" />

        <TextView
            android:id="@+id/game_card_description"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="@string/description1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_card_title"
            app:layout_constraintVertical_bias="0.068" />

        <Button
            android:id="@+id/button2"
            android:layout_width="135dp"
            android:layout_height="39dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/shapes"
            android:elevation="10dp"
            android:text="@string/play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_card_description"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>